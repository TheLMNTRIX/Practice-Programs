#include<iostream>
#include<conio.h>
#include<string>
using namespace std;

void circle()
{
	double r;
	cout << "Enter the radius: ";
	cin >> r;
	double a1 = 3.14 * r * r;
	cout << "Area of the circle is: " << a1;
	
}
void square()
{
	double s;
	cout << "Enter the length of one side: ";
	cin >> s;
	double a2 = s * s;
	cout << "The area of the square is: " << a2;
}

void rectangle()
{
	double l, b;
	cout << "Enter the length of rectangle: ";
	cin >> l;
	cout << "Enter the breadth of rectangle: ";
	cin >> b;
	double a3 = l * b;
	cout << "The area of the rectangle is: " << a3;

}

int main()
{
	int ch;
	do
	{

  
		cout << "\nPick one: \n 1.For Circle \n 2.For Square \n 3.For Rectangle \n Enter your choice: ";
		cin >> ch;
		switch (ch)
		{
		case 1:
			circle();
			break;
		case 2:
			square();
			break;
		case 3:
			rectangle();
		case 4:
			exit(0);
			break;
		default:
			cout << "Invalid choice\n";
			break;


		}
	} while (ch < 4);
	return 0;
}
